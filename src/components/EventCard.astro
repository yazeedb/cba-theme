---
interface Props {
  name: string;
  price: string;
  date: string;
  description: string;
}

const { name, price, date, description } = Astro.props;
---

<div class="bg-white shadow-md rounded-lg border-t-8 border-emerald-950">
  <div class="p-6">
    <div class="font-bold flex items-center justify-between text-xs xs:text-sm">
      <p class="text-slate-600">{date}</p>
      <span class="bg-slate-700 text-slate-50 px-2 py-1 rounded-full"
        >{price}</span
      >
    </div>

    <h3 class="font-bold text-xl my-2 line-clamp-1">{name}</h3>
    <p class="text-gray-700 mb-4 section-paragraph line-clamp-2">
      {description}
    </p>
    <button class="cta-button w-full" type="button">Register</button>
  </div>
</div>
