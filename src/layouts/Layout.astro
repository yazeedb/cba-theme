---
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <link
      href="https://fonts.googleapis.com/css?family=Montserrat:400,700&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body>
    <Nav />

    <slot />

    <Footer />
  </body>
</html>
<style is:global>
  html {
    font-family: montserrat, system-ui, sans-serif;
  }

  .cta-button {
    @apply bg-cta-color text-cta-text-color active:bg-yellow-600 font-bold text-lg px-4 py-2 rounded shadow hover:shadow-lg outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150;
  }

  .hero-heading {
    @apply text-4xl font-bold text-primary-header-light;
  }

  .hero-paragraph {
    @apply text-2xl text-paragraph-light italic;
  }

  .section-heading {
    @apply text-xl font-bold sm:text-2xl;
  }

  .section-heading-minor {
    @apply text-lg font-bold sm:text-xl;
  }

  .section-paragraph {
    @apply sm:text-lg text-base;
  }
</style>
