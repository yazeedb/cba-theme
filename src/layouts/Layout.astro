---
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body>
    <Nav />

    <slot />

    <Footer />
  </body>
</html>
<style is:global>
  @tailwind utilities;

  :root {
    --mobile-nav-height: theme(height.16);
  }

  html {
    font-family: montserrat, system-ui, sans-serif;
  }

  @media (max-width: theme(screens.md)) {
    body {
      margin-bottom: var(--mobile-nav-height);
    }

    #mobile-nav-bottom {
      height: var(--mobile-nav-height);
    }
  }

  @layer utilities {
    .cta-button-style {
      @apply bg-cta-color text-cta-text-color active:bg-yellow-600 font-bold px-4 py-2 shadow hover:shadow-lg outline-none focus:outline-none ease-linear transition-all duration-150;
    }

    .cta-button {
      @apply bg-cta-color text-cta-text-color active:bg-yellow-600 font-bold text-lg px-4 py-2 rounded shadow hover:shadow-lg outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150;
    }

    .section-heading {
      @apply text-xl font-bold sm:text-2xl;
    }

    .section-heading-minor {
      @apply text-lg font-bold sm:text-xl;
    }

    .section-paragraph {
      @apply sm:text-lg text-base w-full sm:w-2/3 md:w-4/5;
    }

    .gap-base {
      @apply gap-4;
    }

    .section-layout {
      @apply gap-base flex flex-col;
    }

    .pb-safe {
      padding-bottom: env(safe-area-inset-bottom);
    }
  }
</style>
